// router test setup

// add ports
port add 5000 192.168.1.1/24 1500
port add 5001 192.168.2.2/24 1500
port add 5002 192.168.3.3/24 1500
port add 5003 192.168.4.4/24 1500
port add 5004 192.168.5.5/24 1500

// add port connections 
connect add 5000 127.0.0.1:5000
connect add 5001 127.0.0.1:5001
connect add 5002 127.0.0.1:5002
connect add 5003 127.0.0.1:5003
connect add 5004 127.0.0.1:5004


// add some routes to routing table
route add 192.168.1.0/24 127.0.0.1
route add 192.168.2.0/24 127.0.0.2
route add 192.168.3.0/24 127.0.0.3
route add 192.168.4.0/24 127.0.0.4
route add 192.168.5.0/24 127.0.0.5

// wait a little
sleep 100

config
